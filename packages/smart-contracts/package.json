{
  "name": "@cherryswap/smart-contracts",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@openzeppelin/cli": "^2.6.0",
    "@openzeppelin/contracts-ethereum-package": "^2.4.0",
    "@openzeppelin/upgrades": "^2.6.0",
    "truffle": "^5.0.37"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.4",
    "bignumber.js": "^9.0.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "decimal.js": "^10.2.0",
    "prettier": "^1.18.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.34"
  },
  "scripts": {
    "add-contract": "openzeppelin add",
    "link-dependencies": "openzeppelin link",
    "push-project": "openzeppelin push",
    "compile": "openzeppelin compile",
    "deploy": "truffle deploy",
    "migrate:development": "truffle migrate --network development",
    "migrate:rinkeby": "truffle migrate --network rinkeby",
    "migrate:mainnet": "truffle migrate --network mainnet",
    "ganache-cli:test": "../shared/ganache-cli.sh",
    "test": "truffle test",
    "coverage": "SOLIDITY_COVERAGE=true yarn run ganache-cli:test",
    "ganache-ci": "ganache-cli --deterministic -e 300 -p 8545 -m 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' --accounts 30 > /dev/null &",
    "stop-ganache": "sudo kill `sudo lsof -t -i:8545`",
    "prettier": "prettier --write **/*.sol",
    "lint": "yarn run prettier"
  }
}
